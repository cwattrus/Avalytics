.demo-tiles
  .span3
    .tile
      = image_tag "illustrations/compass.png", :class => "tile-image big-illustration"
      %h3.tile-title Map Data
      %p See location data represented on maps.
      %a.btn.btn-primary.btn-large.btn-block{:href => reports_map_path} See the Map
  .span3
    .flip-container#charts
      .flipper
        .tile.front
          = image_tag "illustrations/infinity.png", :class => "tile-image big-illustration"
          %h3.tile-title Charts
          %p See your context on different charts (pie, line and more).
          .btn.btn-primary.btn-large.btn-block{:onclick => "$('.flip-container#charts').toggleClass('flipped');"} See the Charts
        .tile.back
          %ul.nav.nav-tabs.nav-stacked{:style => "width: 190px; height: 247px"}
            %li= link_to "Genders", reports_genders_path
            %li= link_to "Races", reports_races_path
          .btn.btn-primary.btn-large.btn-block{:onclick => "$('.flip-container#charts').toggleClass('flipped');"} Back
  .span3
    .flip-container#experiments
      .flipper
        .tile.front
          = image_tag "illustrations/colors.png", :class => "tile-image big-illustration"
          %h3.tile-title Experiments
          %p See some more fringe visulisations.
          .btn.btn-primary.btn-large.btn-block{:onclick => "$('.flip-container#experiments').toggleClass('flipped');"} See the Experiments
        .tile.back
          %ul.nav.nav-tabs.nav-stacked{:style => "width: 190px; height: 247px"}
            %li= link_to "Sunburst", reports_sunburst_path
            %li= link_to "Bubbles", reports_bubbles_path
          .btn.btn-primary.btn-large.btn-block{:onclick => "$('.flip-container#experiments').toggleClass('flipped');"} Back
  .span3
    .flip-container#clean-up
      .flipper
        .tile.front
          = image_tag "illustrations/retina.png", :class => "tile-image big-illustration"
          %h3.tile-title Clean Up
          %p Improve the data in Avalytics for better results.
          .btn.btn-primary.btn-large.btn-block{:onclick => "$('.flip-container#clean-up').toggleClass('flipped');"} Get to it!
        .tile.back
          %ul.nav.nav-tabs.nav-stacked{:style => "width: 190px; height: 247px"}
            %li.nav-header
              Strange Data
            %li= link_to "Country/City Combos", records_to_clean_strange_country_city_combos_path
            %li.nav-header
              Data Assignment
            %li= link_to "Gender", records_to_clean_gender_sample_path
            %li= link_to "Race", records_to_clean_race_sample_path
          .btn.btn-primary.btn-large.btn-block{:onclick => "$('.flip-container#clean-up').toggleClass('flipped');"} Back
