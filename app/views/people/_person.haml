.title= @person.first_name + " " + @person.last_name

.row
  .span9.pull-right
    %ol.progress-tracker
      - incomplete_step_class = "progress-tracker-todo"
      - incomplete_step_class = "progress-tracker-hold" if @person.step == "Hold"
      - incomplete_step_class = "progress-tracker-rejected" if @person.step == "Rejected"
      %li{:class => @person.phone_screened? ? "progress-tracker-done" : incomplete_step_class}
        Phone Screen
      %li{:class => @person.code_reviewed? ? "progress-tracker-done" : incomplete_step_class}
        Code Review
      %li{:class => @person.office_interviewed? ? "progress-tracker-done" : incomplete_step_class}
        Office Interview
      %li{:class => @person.offered? ? "progress-tracker-done" : incomplete_step_class}
        Offer
      %li{:class => @person.hired? ? "progress-tracker-done" : incomplete_step_class}
        Hire
  .span3
    %i.icon-user
    %b=@person.job_title
    %br
    %i.icon-share-alt
    %b=@person.source
    %br
    %i.icon-map-marker
    %b= @person.display_location

%hr

%p
  %b Avature ID:
  = @person.avature_id
  %br
  %b Gender:
  = @person.gender
  %br
  %b Race:
  = @person.race
  %br
  %b Creation Date:
  = @person.creation_date
  %br
  %b Last Updated Date:
  = @person.last_updated_date
  %br
  %b Grade:
  = @person.grade
  %br
  %b Graduate Questionaire Score:
  = @person.questionaire_score
  %br
  %b Step:
  = @person.step
  %br
  %b Referred By:
  = @person.referred_by
  %br
  %b Recruiter:
  = @person.recruiter
  %br
  %b Attached Files and Forms:
  = @person.attached_files_and_forms
%hr
